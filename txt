// index.js
const inventory = [];

function addItem(name, qty, price) {
  inventory.push({ name, qty, price });
  console.log(`âœ… Added: ${name} (${qty} pcs at â‚±${price})`);
}

function showInventory() {
  console.log("\nðŸ“¦ Current Inventory:");
  inventory.forEach((item, i) => {
    console.log(`${i + 1}. ${item.name} - ${item.qty} pcs @ â‚±${item.price}`);
  });
}

// Example usage
addItem("Router", 5, 1500);
addItem("Fiber Cable", 20, 25);
showInventory();
